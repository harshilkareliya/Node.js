<html>
<head>
    <title>Calendar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .calendar {
            max-width: 1200px;
            margin: 20px auto;
        }
        .calendar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }
        .calendar-header h1 {
            margin: 0;
        }
        .calendar-header .btn-group {
            margin-left: 0;
        }
        .calendar-header .btn-group .btn {
            border-radius: 0;
        }
        .calendar-header .btn-group .btn:first-child {
            border-top-left-radius: 25px;
            border-bottom-left-radius: 25px;
        }
        .calendar-header .btn-group .btn:last-child {
            border-top-right-radius: 25px;
            border-bottom-right-radius: 25px;
        }
        .calendar-header .btn-today {
            margin-right: -50px;
        }
        .calendar-header .btn-add {
            margin-left: 10px;
            background-color: #007bff;
            color: white;
        }
        .calendar-table{
            width: 100%;
            border: 1px solid #dee2e6;
            text-align: right;
        }
        .calendar-table td {
            border: 1px solid black;
            height: 120px;
            width: 80px;
            vertical-align: top; /* Align content to the top */
            padding: 5px; /* Add padding for better spacing */
        }
    </style>
</head>
<body>
    <div class="calendar">
        <div class="calendar-header">
            <h1><%=month%> <%=year%></h1>
            <div class="btn-group" role="group">
                <a type="button" class="btn btn-outline-primary">Month</a>
                <a type="button" class="btn btn-outline-primary">Week</a>
                <a type="button" class="btn btn-outline-primary">Day</a>
            </div>
            <div class="btn-group" role="group">
                <a href="" type="button" class="btn btn-outline-primary"><</a>
                <a href="/" type="button" class="btn btn-outline-primary">Today</a>
                <a type="button" class="btn btn-outline-primary">></a>
            </div>
            
            <button type="button" class="btn btn-primary btn-add">Add Appointment</button>
        </div>
        <table class="calendar-table">
            <thead>
                <tr>
                    <th>Sun</th>
                    <th>Mon</th>
                    <th>Tue</th>
                    <th>Wed</th>
                    <th>Thu</th>
                    <th>Fri</th>
                    <th>Sat</th>
                </tr>
            </thead>
            <tbody>
                <% thisMonth.map((week, weekIndex) => { %>
                    <tr>
                      <% week.map((day, dayIndex) => { %>
                        <td 
                          onclick="window.location.href='/addData?date=<%=day%>/<%=month%>/<%=year%>'"
                          style="opacity: 
                          <%= (weekIndex === thisMonth.length - 1 && day >= 1 && day <= 6) || (weekIndex === 0 && day >= 23 && day <= 31) ? '0.5' : '1' %>">
                          <%= day %>
                        </td>
                      <% }) %>
                    </tr>
                  <% }) %>                                                   
            </tbody>
        </table>
    </div>
</body>
</html>
