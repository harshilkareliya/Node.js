<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Profile Page</title>
  <link rel="shortcut icon" type="image/png" href="../assets/images/logos/seodashlogo.png" />
  <link rel="stylesheet" href="../../node_modules/simplebar/dist/simplebar.min.css">
  <link rel="stylesheet" href="../assets/css/styles.min.css" />
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <!-- Sidebar Start -->
    <%- include('../static/sidebar') %>
    <!--  Sidebar End -->
    <!--  Main wrapper -->
    <div class="body-wrapper">
      <!--  Header Start -->
      <%- include('../static/header') %>
      <!--  Header End -->
      <div class="container-fluid">
        <!-- Profile Page Start -->
        <div class="card">
          <div class="card-body">
            <h5 class="card-title fw-semibold mb-4">Profile</h5>
            <div class="profile-container">
              <div class="profile-header text-center mb-4">
                <h2>Welcome, <%= user.name %>!</h2>
              </div>
              <div class="profile-details">
                <div class="mb-3">
                  <label class="fw-semibold">Name:</label>
                  <p class="form-control-plaintext"><%= user.name %></p>
                </div>
                <div class="mb-3">
                  <label class="fw-semibold">Email:</label>
                  <p class="form-control-plaintext"><%= user.email %></p>
                </div>
                <div class="mb-3">
                  <label class="fw-semibold">Age:</label>
                  <p class="form-control-plaintext"><%= user.age %></p>
                </div>
                <div class="mb-3">
                  <label class="fw-semibold">Mobile Number:</label>
                  <p class="form-control-plaintext"><%= user.mobile %></p>
                </div>
              </div>
              <div class=" mt-4">
                <a href="/editUser?id=<%=user.id%>" class="btn btn-warning me-3">Edit Profile</a>
                <a href="/changePassword?id=<%= user.id%>" class="btn btn-danger">Change Password</a>
              </div>
            </div>
          </div>
        </div>
        <!-- Profile Page End -->
      </div>
      <div class="py-6 px-6 text-center">
        <p class="mb-0 fs-4">Design and Developed by <a href="https://adminmart.com/" target="_blank"
            class="pe-1 text-primary text-decoration-underline">AdminMart.com</a> Distributed by <a href="https://themewagon.com/" target="_blank"
            class="pe-1 text-primary text-decoration-underline">ThemeWagon</a></p>
      </div>
    </div>
  </div>
  <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../assets/libs/simplebar/dist/simplebar.js"></script>
  <script src="../assets/js/sidebarmenu.js"></script>
  <script src="../assets/js/app.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>
</html>
