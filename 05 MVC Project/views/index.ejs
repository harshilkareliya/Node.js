<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      crossorigin="anonymous"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles/style.css" />

    <title>Book My Show</title>
  </head>
  <body>
    <nav class="navbar navbar-light navbar-custom">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img
            alt="BookMyShow Logo"
            src="https://placehold.co/100x30?text=Logo"
          />
        </a>
        <form class="d-flex mx-auto">
          <input
            aria-label="Search"
            class="form-control me-2"
            placeholder="Search for Movies, Events, Plays, Sports and Activities"
            type="search"
          />
        </form>
        <div class="d-flex align-items-center">
          <a href="/form"><button class="btn btn-signin me-3">Add Movie</button></a>
          <button class="btn btn-outline-secondary">
            <i class="fas fa-bars"></i>
          </button>
        </div>
      </div>
      <div class="container-fluid">
        <ul class="navbar-nav me-1 mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="#"> Movies </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"> Stream </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"> Events </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"> Plays </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"> Sports </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"> Activities </a>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href="#"> ListYourShow </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"> Corporates </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"> Offers </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"> Gift Cards </a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Movie Card Section -->
    <div class="container mt-5 row">
        <%data.map((e)=>{%>
          <div class="card mx-auto col-4" style="width: 18rem" onclick="window.location.href='/detail?id=<%= e.id %>'">
            <img
              src="<%=e.coverImg%>"
              class="card-img-top"
              alt="Movie poster showing a group of people with a supernatural theme"
            />
            <div class="rating">
              <i class="fas fa-star"></i>
              <span><%=e.star%>/10 <%=e.votes%> Votes</span>
            </div>
            <div class="card-body text-center">
              <h5 class="title"><%=e.title%></h5>
              <p class="genre"><%=e.genre%></p>
            </div>
            <div style="display: flex;">
              <a href="/editData?id=<%=e.id%>"><button class="btn btn-warning">Edit</button></a> &nbsp;&nbsp;
               <a href="/deleteData?id=<%=e.id%>"><button class="btn btn-primary">Delete</button></a>
            </div>
          </div>
        <%})%>
    </div>

    <script
      crossorigin="anonymous"
      integrity="sha384-oBqDVmMz4fnFO9gybBogGzOgQpeKBmBI4rAu9o6KLGp1rF5t1M6t/a6pR0z6d5Q+"
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    ></script>
    <script
      crossorigin="anonymous"
      integrity="sha384-pQWzqazmEBV8a4p0vvTSgIjUmtjJYq+K2MfLhpb9R4J28N5Y/BwD3z2yL2A3uY4D"
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
    ></script>
  </body>
</html>
